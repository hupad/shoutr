<div class="welcome-text">
	<h2> 
		When your work speaks, so will your peers.
	</h2>
	<p>
		Introducing the best way to give and receive shouts in the workplace, when it's most deserved.
	</p>
</div>

<div class="log-in-form">
	
	<div class="log-in-div">
		<h2><div class="icon-wrapper"><div class="icon login"></div></div>Log in</h2>
		
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				
				<%= f.email_field :email, autofocus: true, placeholder: "Email", class: "full-width-input" %>
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "full-width-input" %>

			<% if devise_mapping.rememberable? -%>
				<div class="field">
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me %>
				</div>
			<% end -%>

			<div class="actions">
				<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
					<%= link_to "Forgot Password?", new_password_path(resource_name), class: "forgot-link" %>
				<% end -%>
				<%= f.submit raw("Let's Go &blacktriangleright;"), class: "btn btn-primary pull-right" %>
			</div>
		<% end %>
	</div>
	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<div class="log-in-div">
			<h2><div class="icon-wrapper"><div class="icon sign-up"></div></div>Signup</h2>
			<h3>Not a member? Not a problem. Itâ€™s all free. All of it.</h3>

			<%= link_to raw("Get Started &blacktriangleright;"), new_registration_path(resource_name), class: "btn btn-primary full-width-input" %>
		</div>
	<% end -%>
</div>

<div class="login-featured">
	<p>Featured By:</p>
	<img src="<%= asset_path 'featured-logos.png' %>">
</div>
