<header>
  <section>
    <div>
      <nav class="main-nav" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to(root_path, class: 'navbar-brand') do %>
            <div>SHOUTER</div>
          <% end %>
        </div>

        <% if user_signed_in? %>
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <%= link_to '#', class: 'shout-link' do %>
                      <div class="megaphone-wrapper"><div class="icon megaphone"></div></div><div class="header-text">Send a shout</div>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to '#', class: 'profile-link' do %>
                      <div class="profile-wrapper"><img src="<%= asset_path 'default.jpg' %>"></div>
                      <div class="header-text">
                        <%= current_user.first_name %>
                      </div>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to '#', class: 'notification-link' do %>
                      <div class="icon bolt">Notifications</div>
                    <% end %>
                  </li>
                </ul>
              </div>
        <% else %>
               <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                  <li>
                    <%= link_to new_user_session_path, class: 'shout-link' do %>
                      <div class="megaphone-wrapper"><div class="icon megaphone"></div></div><div class="header-text">Log In</div>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "Sign up", class: 'profile-link' do %>
                    <% end %>
                  </li>
                </ul>
              </div>
        <% end %>

      </nav>
    </div>
  </section>
</header>
