<% if flash[:notice] %>
	<div class="alert alert-info">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<p> <%= flash[:notice] %> </p>
	</div>
<% end %>

<% if flash[:error] %>
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<p> <%= flash[:error] %> </p>
	</div>
<% end %>