

<% @shouts.each do |shout| %>
	<div class="row">

		<div class="col-md-4">
			<div>
				<%= image_tag("default.jpg", size: "70x70", class: "large-badge core") %>
			</div>
		</div>
		
		<div class="col-md-6">
			<h3>
				<%= shout.receiver.full_name %> 
			</h3>
			<p>
				shouted by <%= shout.sender.full_name %>
			</p>
			<p>
				<%= shout.notes %>
			</p>
		</div>

		<div class="col-md-2">
			<p>
				<%= time_ago_in_words(shout.created_at) %>
			</p>
		</div>
	</div>
<% end %>