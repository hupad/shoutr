<h1><div class="icon news"></div><span>Newsfeed</span></h1>

<% @shouts.each do |shout| %>
	<div class="row shout">
		<section class="shout-time">
			<p><%= time_ago_in_words(shout.created_at) %> ago</p>
		</section>
		<section>
			<div class="large-badge <%= shout.badge.badge_category.short_name %>">
			<div class="icon <%= shout.badge.badge_category.short_name %>-<%= shout.badge.short_name %>"></div></div>
			<p><span class="shout-name"><%= shout.receiver.full_name %></span>shouted by <%= shout.sender.full_name %></p>
			<% if !shout.badge.nil? %>
				<p class="badge-name"><%= shout.badge.name %></p>
				<p class="badge-category"><%= shout.badge.badge_category.name %></p>
			<% end %>
			<p class="badge-why"><%= shout.notes %></p>
		</section>
		<section>
			<div class="shout-activity">
				<p class="like-wrapper" id="like<%= shout.id %>"><span class="icon like"></span><%= shout.likes.count %></p>
				<p class="comment-wrapper"><span class="icon comment"></span>12</p>
			</div>

			<div class="shout-actions">
				<% if current_user.liked(shout) %>
					<p class="like-wrapper">
						<%= link_to "", data: {like: false}, remote: false, onClick: "likeShout(#{shout.id})", id: "like-shout-button#{shout.id}" do %>
							Unlike
							<span class="icon like blue"></span>
						<% end %>
					</p>
				<% else %>
					<p class="like-wrapper">
						<%= link_to "", data: {like: true}, remote: true, onClick: "likeShout(#{shout.id})", id: "like-shout-button#{shout.id}" do %>
							Like
							<span class="icon like blue"></span>
						<% end %>
					</p>
				<% end %>
				<p class="comment-wrapper"><a href="#"><span class="icon comment blue"></span>Comment</a></p>
			</div>

		</section>
	</div>
<% end %>
